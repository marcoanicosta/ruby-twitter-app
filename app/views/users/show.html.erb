<% provide(:title, @user.name)%>
<div class="row">
    <aside class="col-md-4">
        <section>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
    
            <ul>
            <li><%= @user.name %>, <%= @user.email %></li>
            <li><%= @user.created_at %></li>
            <li><%= @user.updated_at %></li>
            <li><%= Time.now %></li>
            </ul>
        </section>
    </aside>
</div>